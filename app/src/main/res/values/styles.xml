<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="path_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="minHeight">48dp</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="end_line_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="srcCompat">@drawable/ic_more_horiz</item>
    </style>

    <style name="regularity_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="cloud_auth_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="error_view">
        <item name="android:textColor">@color/error_view_fg</item>
        <item name="android:background">@color/error_view_bg</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dialog_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="storageTypeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:src">@drawable/ic_storage_type_question_mark</item>
    </style>

    <style name="task_list_item_info_row_element">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="task_list_item_info_row_icon" parent="task_list_item_info_row_element">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="minWidth">42dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="task_list_item_info_row_text" parent="task_list_item_info_row_element">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>


    <style name="simple_list_item">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sync_log_item_details_text_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

</resources>