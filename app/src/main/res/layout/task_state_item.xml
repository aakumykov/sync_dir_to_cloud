<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:textColor="@color/text_on_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/syncLogPrimaryStateIcon"
        tools:text="Заголовок" />

    <ImageView
        android:id="@+id/syncLogSecondaryStateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/syncLogPrimaryStateIcon"
        app:layout_constraintEnd_toEndOf="@id/syncLogPrimaryStateIcon"
        app:layout_constraintStart_toStartOf="@id/syncLogPrimaryStateIcon"
        app:layout_constraintTop_toTopOf="@id/syncLogPrimaryStateIcon"
        app:srcCompat="@drawable/ic_sync_log_error"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/syncLogPrimaryStateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sync_log_success"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>