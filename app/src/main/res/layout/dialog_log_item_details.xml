<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/syncLogItemDetailsMessage"
            style="@style/sync_log_item_details_text_row"
            android:layout_weight="0"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Название операции" />

        <TextView
            android:id="@+id/syncLogItemDetailsItemName"
            style="@style/sync_log_item_details_text_row"
            android:layout_weight="0"
            android:textStyle="bold"
            tools:text="Имя файла / каталога" />

        <TextView
            android:id="@+id/syncLogItemDetailsTime"
            style="@style/sync_log_item_details_text_row"
            android:layout_weight="0"
            android:textSize="12sp"
            tools:text="дата и время" />

        <TextView
            android:id="@+id/syncLogItemDetailsTaskId"
            style="@style/sync_log_item_details_text_row"
            android:layout_weight="0"
            android:textSize="12sp"
            tools:text="taskId" />

        <TextView
            android:id="@+id/syncLogItemDetailsExecutionId"
            style="@style/sync_log_item_details_text_row"
            android:layout_weight="0"
            android:textSize="12sp"
            tools:text="executionId" />

        <TextView
            android:id="@+id/syncLogItemError"
            style="@style/sync_log_item_details_text_row"
            android:textColor="@color/error"
            android:textSize="12sp"
            tools:text="Ошибка" />

    </LinearLayout>

</ScrollView>
